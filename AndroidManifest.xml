<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="be.boeboe.scapsync.android"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="14"
		android:targetSdkVersion="15" />

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/BlackTheme" >
		<activity
			android:name=".MainActivity"
			android:label="@string/title_activity_main" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".search.SearchActivity"
			android:label="@string/title_activity_search" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="be.boeboe.scapsync.android.MainActivity" />
		</activity>
		<activity
			android:name=".stats.StatsActivity"
			android:label="@string/title_activity_stats" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="be.boeboe.scapsync.android.MainActivity" />
		</activity>
		<activity
			android:name=".profiles.ProfilesActivity"
			android:label="@string/title_activity_profiles" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="be.boeboe.scapsync.android.MainActivity" />
		</activity>
		<activity
			android:name=".feeds.FeedsActivity"
			android:label="@string/title_activity_feeds" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="be.boeboe.scapsync.android.MainActivity" />
		</activity>
		<activity
			android:name=".search.SearchListActivity"
			android:label="@string/title_activity_search_list" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="be.boeboe.scapsync.android.search.SearchActivity" />
		</activity>
	</application>

</manifest>